
@{
    ViewData["Title"] = "Cart";
}

<form method="post">
    <section>
        <div class="container">
            <div class="bg-white border border-1 border-info d-flex flex-nowrap mb-3">
                <div class="row m-3">
                    <h1>Yolcu Bilgileri</h1>
                    <div class="col-3">
                        <label for="tcKimlikNo">T.C. Kimlik No</label>
                        <input type="text" class="form-control" placeholder="T.C. Kimlik No" aria-label="T.C. Kimlik No" id="KimlikNo"required>
                    </div>
                    <div class="col-3">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" placeholder="First name" aria-label="First name" id="FirstName"required>
                    </div>
                    <div class="col-3">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" id="LastName"required>
                    </div>
                    <div class="col-3">
                        <label for="dateOfBirth">Date of Birth</label>
                        <input type="date" id="Date" name="Date" required>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label for="gender">Gender</label>
                            <div class="form-check form-check-inline">
                              <input class="form-check-input" type="radio" name="Gender" id="male" value="male">
                              <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                              <input class="form-check-input" type="radio" name="Gender" id="female" value="female">
                              <label class="form-check-label" for="female">Female</label>
                            </div>
    
                            
                    </div>
                    <div class="col-4">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" placeholder="email" aria-label="Email" id="Email"required>
                      </div>
                      <div class="col-4">
                        <label for="phone">Phone</label>
                        <input type="tel" id="phone" class="form-control" placeholder="phone" aria-label="Phone" name="Phone" required>
                      </div>    
                </div>  
            </div>
        </div>
    
        <div class="container bg-white border border-1 border-info d-flex flex-nowrap mb-3">
          <div class="row">
            <h2>Fatura bilgileri</h2>
            <div class="col-3">
              <select class="form-select form-select" aria-label="Large select example" id="billingType" name="Type">
                <option selected>Billing Type</option>
                <option value="1">Bireysel</option>
                <option value="2">Şirket</option>
                <option value="3">Şahıs Mülkiyeti</option>
              </select>
            </div>
            <div class="col-3">
              <input type="text" class="form-control" placeholder="First name" aria-label="First name" id="FirstName" name="FirstName" required>
            </div>
            <div class="col-3">
              <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" id="LastName" name="LastName" required>
            </div>
            <div class="col-3">
              <input type="text" class="form-control" placeholder="T.C. Kimlik No" aria-label="T.C. Kimlik No" id="KimlikNo" name="KimlikNo">
            </div>
          </div>
        </div>
        <div class="container bg-white border border-1 border-info d-flex flex-nowrap mb-3">
          <div class="row">
            <h2>Ödeme Detayları</h2>
            <Div class="col-3">
              <label for="cardNumber">Card Number</label>
              <input type="text" class="form-control" placeholder="Card Number" aria-label="Card Number" id="CardNumber"  required>
            </div>
            <div class="col-3">
              <label for="expiration">Expiration Date</label>
              <input type="text" class="form-control" placeholder="MM/YYYY" aria-label="expiration" id="ExpirationDate" required>
            </div>
            <div class="col-3">
              <label for="cvv">CVV</label>
              <input type="text" class="form-control" placeholder="cvv" aria-label="cvv" id="Cvv "required>
            </div>
          
            <div class="col-5">
            <button  type="submit" class="btn btn-info btn-block">Pay Now</button>
          </div>
          </div>
        </div>
        </div>
      </section>

</form>